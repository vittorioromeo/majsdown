@@${

function wrapInCodeBlock(code, lang)
{
    return "```" + lang + "\n" + code + "\n```";
}

function replaceStdNamespace(ns, code, lang)
{
    return wrapInCodeBlock(
        code.replace(/std::/g, `${ns}::`), lang
    );
}

}$

